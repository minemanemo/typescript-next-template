{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@common/*": ["src/common/*"],
      "@containers/*": ["src/containers/*"],
      "@modules/*": ["src/modules/*"],
      "@pages/*": ["src/pages/*"]
    }
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
